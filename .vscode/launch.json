{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Debug main.py",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "main.py",
                "--server.headless",
                "true"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "python": "${workspaceFolder}/env/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}

